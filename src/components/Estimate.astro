</style>

<script>
    const estimate = document.getElementById("estimate");
    const logoImg = document.getElementById("logo");
    const logoText = document.getElementById("logo-text");
    const btn = document.getElementById("estimate-btn");

    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            logoText.classList.toggle("peach", entry.isIntersecting);
            btn.classList.toggle("peach-bg", entry.isIntersecting);
            logoImg.classList.toggle("peach", entry.isIntersecting);
        })
    },
    {
        threshold: 0.1,
    })
    observer.observe(estimate);
</script>